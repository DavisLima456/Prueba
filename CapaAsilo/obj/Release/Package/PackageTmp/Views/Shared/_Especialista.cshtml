<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mi aplicación ASP.NET</title>
    @Styles.Render("~/Content/css")
    @* @Scripts.Render("~/bundles/modernizr")*@
</head>
<body class="sb-nav-fixed">
    <nav class="sb-topnav navbar navbar-expand navbar-dark bg-dark">
        <!-- Navbar Brand-->
        <a class="navbar-brand ps-3">ESPECIALISTA</a>
     
        <!-- Sidebar Toggle-->
        <button class="btn btn-link btn-sm order-1 order-lg-0 me-4 me-lg-0" id="sidebarToggle" href="#!"><i class="fas fa-bars"></i></button>
  
        <ul class="navbar-nav ms-auto me-0 me-md-3 my-2 my-md-0">
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" id="navbarDropdown" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false"><i class="fas fa-user fa-fw"></i></a>
                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                    <li><a class="dropdown-item" href="#!">Corro de Usuario</a></li>
               
                    <li><hr class="dropdown-divider" /></li>
                    <li><a class="dropdown-item" href="@Url.Action("Index","Acceso")">Cerrar Sesion</a></li>
                </ul>
            </li>
        </ul>
    </nav>
    <div id="layoutSidenav">
        <div id="layoutSidenav_nav">
            <nav class="sb-sidenav accordion sb-sidenav-dark" id="sidenavAccordion">
                <div class="sb-sidenav-menu">
                    <div class="nav">

                        @*LOS REPORTE DEL ASILO*@
                        <div class="sb-sidenav-menu-heading">AGENDA DEL ESPECIALISTA</div>
                        <a class="nav-link" href="@Url.Action("HistorialEspacialista","Especialista")">
                            <div class="sb-nav-link-icon"><i class="fas fa-poll"></i></div>
                            HISTORIAL
                        </a>
                        <div class="sb-sidenav-menu-heading">MODULO DE ASIGNACIONES</div>
                        <a class="nav-link" href="@Url.Action("Index","Especialista")">
                            <div class="sb-nav-link-icon"><i class="fas fa-poll"></i></div>
                            ASIGNAR EXAMENES
                        </a>
                        <a class="nav-link" href="@Url.Action("AsignarMedicina","Especialista")">
                            <div class="sb-nav-link-icon"><i class="fas fa-donate"></i></div>
                            ASIGNAR MEDICAMENTOS
                        </a>

                    </div>
                </div>
                <div class="sb-sidenav-footer">
                    <div class="small">Asilo:</div>
                    "Cabeza de Algodon"
                </div>
            </nav>
        </div>
        <div id="layoutSidenav_content">
            <main>
                <div class="container-fluid px-4">
                    @RenderBody()
                </div>
            </main>
            <footer class="py-4 bg-light mt-auto">
                <div class="container-fluid px-4">
                    <div class="d-flex align-items-center justify-content-between small">
                        <div class="text-muted">Copyright &copy; Your Website 2021</div>
                        <div>
                            <a href="#">Privacy Policy</a>
                            &middot;
                            <a href="#">Terms &amp; Conditions</a>
                        </div>
                    </div>
                </div>
            </footer>
        </div>
    </div>

    @*<li>@Html.ActionLink("PACIENTES", "Index", "Home")</li>
        <li>@Html.ActionLink("MEDICO", "About", "Home")</li>
        <li>@Html.ActionLink("ENFERMEROS", "Contact", "Home")</li>
        <li>@Html.ActionLink("ESPECIALISTAS", "Prueba", "Home")</li>
        <div class="container body-content">
            @RenderBody()
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - Mi aplicación ASP.NET</p>
            </footer>
        </div>*@

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/Complementos")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
    