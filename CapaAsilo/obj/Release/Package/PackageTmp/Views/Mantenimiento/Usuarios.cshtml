
@{
    ViewBag.Title = "Usuarios";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<ol class="breadcrumb mb-4 mt-4">
    <li class="breadcrumb-item"><a href="index.html">Mantenimiento</a></li>
    <li class="breadcrumb-item active">Usuarios</li>
</ol>

<div class="card">
    <img class="card-img-top" src="https://thumbs.dreamstime.com/b/m%C3%A9dico-mujer-con-estetoscopio-en-banner-horizontal-del-hospital-sosteniendo-un-cartel-sobre-el-fondo-200769310.jpg" height="300">
    <div class="card-body">
        <i class="fas fa-user-md me-2"></i>Lista de Usuarios
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-12">
                <button type="button" class="btn btn-outline-primary" onclick="abrirModal(null)">Nuevo Usuario</button>
            </div>
        </div>

        <hr />
        <table id="tabla1" class="display cell-border" style="width:100%">
            <thead>
                <tr>
                    <th>NOMBRE</th>
                    <th>APELLIDO</th>
                    <th>CORREO</th>
                    <th>ROL</th>
                    <th>ACTIVO</th>
                    <th></th>
                </tr>
            </thead>

            <tbody>
            </tbody>
        </table>

    </div>
</div>


<!-- Modal -->
<div class="modal fade" id="formModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="staticBackdropLabel">Medico</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body ">

                <input id="txtid" type="text" value="0" />
                <div class="row g-2">

                    <div class="col-sm-6">
                        <label for="txtnombre">Nombres</label>
                        <input type="text" class="form-control" id="txtnombre" placeholder="Ingrese su Nombre" autocomplete="off">
                    </div>
                    <div class="col-sm-6">
                        <label for="txtapellido">Apellidos</label>
                        <input type="text" class="form-control" id="txtapellido" placeholder="Ingrese su Apellido" autocomplete="off">
                    </div>
                    <div class="col-sm-6">
                        <label for="correo">Correo</label>
                        <input type="email" class="form-control" id="correo" placeholder="Ingrese su Correo" autocomplete="off">
                    </div>
                    <div class="col-sm-6">
                        <label for="Rol">Rol</label>
                        <input type="text" class="form-control" id="Rol" autocomplete="off">
                    </div>
                    <div class="col-sm-6">

                        <label for="activo" class="form-label">Activo</label>
                        <select class="form-select" id="activo">
                            <option value="1">Si</option>
                            <option value="0">No</option>

                        </select>
                    </div>

                </div>
                <div class="row mt-2">
                    <div class="col-12">
                        <div id="mensajeError" class="alert alert-danger" role="alert">
                            This is a danger alert—check it out!
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-primary" onclick="guardar()">Guardar</button>
            </div>
        </div>
    </div>
</div>



@section scripts{
    
    <script>
        var tabladata;
        
        tabladata = $("#tabla1").DataTable({
            
            responsive: true,
            ordering: false,
            "ajax": {
                url: '@Url.Action("ListarUsuarios", "Mantenimiento")',
                type: "GET",
                dataType: "json"
            },
            "columns": [
                { "data": "NOMBRE" },
                { "data": "APELLIDO" },
                { "data": "CORREO" },
                { "data": "ROL" },
                {
                    "data": "ACTIVO", "render": function (valor) {
                        if (valor) {
                            return "Si"
                        } else {
                            return "No"
                        }
                    }
                },
                {
                    "defaultContent": '<button type="button" class="btn btn-outline-primary btn-editar"><i class="fas fa-pen"></i></button>' +
                        '<button type="button" class="btn btn-outline-danger ms-2 btn-eliminar"><i class="fas fa-trash"></i></button>',
                    "orderable": false,
                    "searchable": false,
                    "width": "90px"


                }

            ],
            "language": {
                "url": '//cdn.datatables.net/plug-ins/1.12.1/i18n/es-ES.json'
            }

        });

        function abrirModal(json) {
            $("#txtid").val(0);
            $("#txtnombre").val("");
            $("#txtapellido").val("");
            $("#correo").val("");
            $("#Rol").val("");
            $("#activo").val(1);

            $("#mensajeError").hide();




            if (json != null) {
                $("#txtid").val(json.IdMedico);
                $("#txtnombre").val(json.Nombre);
                $("#txtapellido").val(json.Apellido);
                $("#correo").val(json.Correo);
                $("#Rol").val(json.Rol);
                $("#activo").val(json.Activo == true ? 1:0 );

            }



            $("#formModal").modal("show");

        }


    </script>
    
    
    }